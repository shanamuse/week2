#include <stdio.h>

int main() {
    int num1, num2, sum, diff, prod, int_div, remainder;
    float float_div;

    printf("Math Operation Test:\n");
    printf("--------------------\n\n");

    printf("Please enter the first whole number:\n");
    scanf("%d", &num1);
    printf("Please enter the second whole number:\n");
    scanf("%d", &num2);

    printf("\nCalculating...\n\n");

    sum = num1 + num2;
    diff = num1 - num2;
    prod = num1 * num2;
    int_div = num1 / num2;
    float_div = (float)num1 / num2;
    remainder = num1 % num2;

    printf("%d + %d is %d\n\n", num1, num2, sum);
    printf("%d - %d is %d\n\n", num1, num2, diff);
    printf("%d * %d is %d\n\n", num1, num2, prod);
    printf("With integer division:\n\n");
    printf("%d / %d is %d\n\n", num1, num2, int_div);
    printf("With floating point division:\n\n");
    printf("%d / %d is %.6f\n\n", num1, num2, float_div);
    printf("The remainder of %d divided by %d is %d\n", num1, num2, remainder);

    return 0;
}
