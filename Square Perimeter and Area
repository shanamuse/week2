#include <stdio.h>

int main() {
    int side, perimeter, area;

    printf("What is the length of one side?\n\n");
    scanf("%d", &side);

    perimeter = 4 * side;
    area = side * side;

    printf("The square's perimeter is: %d\n\n", perimeter);
    printf("The square's area is: %d\n", area);

    return 0;
}
