#include <stdio.h>

int main() {
    float base, height, area;

    printf("What is the length of the triangle's base?\n\n");
    scanf("%f", &base);
    printf("What is the height of the triangle?\n");
    scanf("%f", &height);

    area = 0.5 * base * height;

    printf("\nThe triangle's area is: %.2f\n", area);

    return 0;
}
