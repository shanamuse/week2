#include <stdio.h>

int main() {
    float base, height, hypotenuse, perimeter, area;

    printf("Please enter three sides of a right-angle triangle:\n\n");
    printf("Base leg?\n");
    scanf("%f", &base);
    printf("Height leg?\n");
    scanf("%f", &height);
    printf("Hypotenuse side?\n\n");
    scanf("%f", &hypotenuse);

    perimeter = base + height + hypotenuse;
    area = (base * height) / 2;

    printf("The perimeter is: %f\n", perimeter);
    printf("The area is: %f\n", area);

    return 0;
}
