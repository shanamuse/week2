#include <stdio.h>

int main() {
    int num1, num2, num3, sum;

    printf("Please enter a whole number:\n");
    scanf("%d", &num1);
    printf("Please enter another whole number:\n");
    scanf("%d", &num2);
    printf("Please enter another whole number:\n\n");
    scanf("%d", &num3);

    sum = num1 + num2 + num3;

    printf("%d plus %d plus %d is %d\n", num1, num2, num3, sum);

    return 0;
}
